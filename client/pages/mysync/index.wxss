/* pages/mysync/index.wxss */
page{
    background-color: #f9f9f9;
}
.my-row{
    display: flex;
    margin-bottom: 5px;
    padding: 10px;
    background-color:#fff;
}
.my-cel-left{
    width: 80px;
    text-align:right;
    padding:10px;
}
.my-cel-right{
    flex:1;
    display:flex;
    border-bottom: 1px solid #555;
}
.my-cel-right>view{
    flex:1;
    justify-content:center;
    display:flex;
}
.my-cel-right>view>view{
    width: 100px;
    background-color: #99CCFF;
    border: 1px solid #99CCFF;
    color: #fff;
    border-radius: 6px;
    text-align:center;
    height:30px;
    padding-top:5px;
    margin-top:8px;
    font-size: 15px;
}


/*按钮共同样式*/
.top-button{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;/*垂直居中*/
  text-align: center;
  position:fixed;
  z-index: 500;
  bottom: 0;
  width: 100%;
  padding:20rpx 0rpx;
}

/*按钮共同样式*/
.wriete-button-add,.wriete-button-remove{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;/*垂直居中*/
  text-align: center;
  border-radius: 6rpx;
  color: #fff;
  border: 1px solid #e5e5e5;
}
/*新增按钮*/
.wriete-button-add{
  background-color:#99CCFF;
  margin-right:20rpx;
  margin-left:30rpx;
  padding:8rpx 4rpx;
  width: 150px;
}
/*清空按钮*/
.wriete-button-remove{
  background-color:#c5c5c5;
  margin: 6rpx 30rpx 6rpx 0rpx;
  padding:3rpx 0rpx;
}
/*按钮旁的图标*/
.write-button-icon{
  margin-right: 15rpx
}
button{
  line-height: 1.9
}