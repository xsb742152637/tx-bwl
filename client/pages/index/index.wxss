/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.noteInfo{
  width: 100%;
  margin-top: 40rpx;
  margin-bottom: 85rpx;
}
.note{
    margin-bottom: 15rpx;
    height: 110rpx;
    width: 100%;
    background: #FFF;
    display: flex;
    flex-direction: column;
    transition: all 300ms ease;
}
.note .detail{
    display: flex;
    flex-direction: row;
}
.note .detTitle{
    font-size: 30rpx;
    color:#333;
    width: 100%;
    padding-left:20rpx;
    padding-right:20rpx;
    padding-top:10rpx;
}
.note .detSysTime{
    font-size: 25rpx;
    padding-top:10rpx;
    width:180px;
    word-break:keep-all;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.note .detContent,.note .detSysTime{
    padding-left:20rpx;
    padding-right:20rpx;
    color: #888;
}
.note .detContent{
    width: 95%;
    font-size: 27rpx;
    padding-top:10rpx;
    word-break:keep-all;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}

/*底部浮动栏*/
.my-view-bottom{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 85rpx;
  background-color: #fff;
  text-align: center;
  padding-top: 15rpx;
  border-top: 1px solid rgba(0, 0, 0, .1);
}
/*新增笔记按钮*/
.wriete-button{
  transform:rotate(45deg);
}