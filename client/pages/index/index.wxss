/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.page{
  background-color:#fff;
}
.weui-panel{
  margin: 0px 0px 0px 15px;
}
.weui-media-box{
  padding:1px 15px 10px 10px;
}
.weui-panel:before {
  border: none;
}

.weui-panel:after {
  border:none;
  border-bottom:1rpx solid #e5e5e5;
}

.weui-panel__hd:after{
  border: none;
}
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.listContent{
  overflow-y: auto;
  
}
.noteInfo{
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 55rpx;
}
.detHd{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding:10px 15px 8px 0px;

}
.detHdLeft{
  display: flex;
  flex-direction: row;
}
.detTitle{
  font-size: 18px;
  color: #000;
}
.noteInfo .detType{
    border: 1px #F6F6F6 solid;
    padding: 5rpx 20rpx;
    border-radius: 6rpx;
    background-color: #2ccd70;
    color: #fff;
}
.noteInfo .detMoney{
  margin-left: 20rpx;

  border-left: 1px #ccc solid;
  padding: 0rpx 20rpx;
  color: #555;
  font-size:15px;
}
.noteInfo .detContent{
  font-size: 17px;
  color: #000;
}

/*底部浮动栏*/
.my-view-bottom{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 85rpx;
  background-color: #fff;
  text-align: center;
  padding-top: 15rpx;
  border-top: 1px solid rgba(0, 0, 0, .1);
}
/*新增笔记按钮*/
.wriete-button{
  transform:rotate(45deg);
}