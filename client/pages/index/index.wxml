<view class="page">
    <view class="weui-panel" bindtap='shopInfo'>
      <view class="weui-panel__hd detHd">
          <view class='detTitle'>消费单：{{weekShop}}￥(本周)</view>
          <view class='detSysTime'>{{newShop.sysTime}}{{newShop.weekDay}}</view>
      </view>
      <!-- <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text">
              <view class="weui-media-box__desc detContent">{{newShop.shopComment}}</view> 
          </view>
      </view> -->
    </view>
    
    <view class="weui-panel">
      <view class="weui-panel__hd detHd2">
        <view class='detTitle'>支付报表：</view>
        <view class='detSysTime'>
          <radio-group bindchange="radioChange" style="display:flex;flex-direction:row;justify-content:space-between">
                      <label style='display:flex;flex-direction:row;justify-content:space-between' class="weui-cell weui-check__label" wx:for="{{array}}" wx:key="value">
                          <radio name="payType" class="weui-check" value="{{item.uniqueId}}" checked="{{item.checked}}"/>

                          <view class="weui-cell__bd">{{item.name}}</view>
                          <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                              <icon class="weui-icon-radio" type="success_no_circle" size="16"></icon>
                          </view>
                      </label>
                    </radio-group>
        </view>
          
      </view>
      <view class="weui-panel__bd">
          <canvas style='height:300px;width:{{winWidth}}px' canvas-id="pieCanvas" disable-scroll="true" class="canvas"></canvas>
      </view>
    </view>
    
    <view class="weui-panel" bindtap='noteInfo'>
      <view class="weui-panel__hd detHd">
          <view class='detTitle'>随手记</view>
          <view class='detSysTime'>{{newNote.sysTime}}{{newNote.weekDay}}</view>
      </view>
      <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text">
              <view class="weui-media-box__desc detContent">{{newNote.title}}</view> 
          </view>
      </view>
    </view>
    
    <view class="weui-panel" bindtap='readInfo'>
      <view class="weui-panel__hd detHd">
          <view class='detTitle'>免费小说</view>
          <view class='detSysTime'></view>
      </view>
      <!-- <view class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text">
              <view class="weui-media-box__desc detContent">{{newNote.title}}</view> 
          </view>
      </view> -->
    </view>
</view>