/* pages/index/writeShop.wxss */
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
form{
  width: 95%;
}
.detTop{
  margin-top:50rpx; 
}
.view-button{
  position:absolute;
  bottom:20rpx;
  width:100%;
}
.view-button>button{
  width:40%;
}

.shopType{
  display: flex;
  flex-direction: row;
  height: 44px;
  line-height:40px;
}
.shopType_ch{
  transform:rotate(90deg);
}

.addShopType,addShopTypeInput{
  display: flex;
  flex-direction: row;
}
.addShopTypeInputShow{
  display: block;
}
.addShopTypeInputHide{
  display: none;
}
.shopTypeButton{
  padding: 2px 8px;
  font-size:17px;
  text-align:center;
  border-radius:5px;
  background: #1AAD19;
  color:#FFFFFF;
}
.detTextArea{
  margin-top: 30rpx;
}