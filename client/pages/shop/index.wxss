/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.listContent{
  overflow-y: auto;
  
}
.noteInfo{
  width: 100%;
  margin-top: 20rpx;
  margin-bottom: 55rpx;
}
.detHd{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.detHdLeft{
  display: flex;
  flex-direction: row;
}
.detTitle{
  font-size: 15px;
  color: #555;
}
.noteInfo .detType{
    border: 1px #F6F6F6 solid;
    padding: 5rpx 20rpx;
    border-radius: 6rpx;
    background-color: #2ccd70;
    color: #fff;
    margin:0px 3px;
}
.noteInfo .detPay{
    border: 1px #F6F6F6 solid;
    padding: 5rpx 20rpx;
    border-radius: 6rpx;
    background-color: #28468c;
    color: #fff;
}
.noteInfo .detMoney{
  padding: 0rpx 20rpx;
  color: #555;
  font-size:15px;
}
.noteInfo .detContent{
  font-size: 17px;
  color: #000;
}

/*底部浮动栏*/
.my-view-bottom{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 85rpx;
  background-color: #fff;
  text-align: center;
  padding-top: 15rpx;
  border-top: 1px solid rgba(0, 0, 0, .1);
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  display:flex;

}
.my-view-bottom-left{
  font-size:15px;
  padding-left:10px;
}
.my-view-bottom-right{
  font-size:15px;
  padding-right:10px;
}
/*新增笔记按钮*/
.wriete-button{
  transform:rotate(45deg);
}
.delete-button{
  transform:rotate(90deg);
}